<section class="mt-10">
    <h2 class="text-center">Gallery</h2>
    <div class="grid grid-cols-2 md:grid-cols-3 gap-4">
        {% for block in section.blocks %}
            <div class="h-auto max-w-full rounded-lg">
                {% render 'image_b', image: block.settings.image %}
            </div>
        {% endfor %}
    </div>

</section>
{% schema %}
{
  "name": "GalleryB",
  "blocks": [
    {
      "type": "image",
      "name": "Image",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        }
      ]
    }
  ],
  "settings": [
  ],
  "presets": [
    {
      "name": "GalleryB"
    }
  ]
}
{% endschema %}
